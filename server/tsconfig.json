{
  "compilerOptions": {
    "rootDir": ".",
    "lib": ["ESNext"],
    "module": "nodenext",
    "target": "esnext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "nodenext",
    "rewriteRelativeImportExtensions": true,
    "erasableSyntaxOnly": true,
    "verbatimModuleSyntax": true,
    "allowJs": true,
    "checkJs": false,
    "outDir": "../dist_server",
    "paths": {
      "@types/*": ["./types/*"]
    },

    // TODO: remove those whenever we migrate to TypeScript fully
    "noImplicitAny": false
  },
  "include": ["./**/*.ts", "./**/*.js"],
  "exclude": ["node_modules", "dist"]
}
